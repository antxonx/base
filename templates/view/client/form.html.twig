<form id="{{ id }}">
	{% include 'form/input.html.twig' with {
        type : 'text',
        id: 'name',
        label: 'Nombre',
        placeholder: 'Nombre',
        required : true,
        error : 'Ingrese un nombre para el cliente'
    } %}
	{% include "form/phone.html.twig" with {
        type: 'tel',
        id: 'phone',
        label: 'Teléfono',
        placeholder: 'Teléfono',
        required: true,
        error: 'Ingrese un teléfono válido'
    } %}
	{% include 'form/input.html.twig' with {
        type : 'text',
        ttype : 'email',
        id: 'email',
        label: 'Correo',
        placeholder: 'correo@correo.com',
        required : true,
        error : 'Ingrese un correo válido'
    } %}
	{% if contact %}
		{% include 'form/input.html.twig' with {
            type : 'text',
            id: 'role',
            label: 'Parentesco/Referencia',
            placeholder: 'Parentesco/Referencia',
            required : true,
            error : 'Ingrese el parentesco o referencia para el contacto'
        } %}
	{% endif %}
	{% if (not contact) and is_granted("ROLE_ADMIN") %}
		<div class="form-group">
			<select id="category-select" class="form-control">
				<option class="text-muted" value="0" hidden>Categoría</option>
				{% for category in categories %}
					<option class="text-muted" value="{{ category.id }}">{{ category.name }}</option>
				{% endfor %}
			</select>
		</div>
	{% else %}
		<input type="hidden" id="category-select" value="0">
	{% endif %}
	<div id="submit-btn" class="w-100 text-left">
		<button type="submit" class="btn btn-large btn-antxony round w-100" id="submit-real-btn">Agregar</button>
	</div>
</form>
