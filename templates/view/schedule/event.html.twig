<div class="event" style="{% if event.done %}background-color: {{ configuration.getConfig.TaskDoneColors.config['background-color'] }};color: {{ configuration.getConfig.TaskDoneColors.config.color }};{% else %}background-color: {{ event.category.backgroundColor ~ 'bb' }};color: {{ event.category.color }};{% endif %}{% if event.scheduleObs|length > 0 %}{{ configuration.getConfig.TaskCommentedBorder.config.style }};{% endif %}" event-id="{{ event.id }}">
	<div style="width: 100%;">
		<div class="header">
			<span class="assigned">
				{% if event.client != null %}
					{{ event.client.name }}
				{% else %}
					&nbsp;
				{% endif %}
			</span>
			<span {% if not event.done and event.priority != null %} class="priority" style="background-color: {{ event.priority.color }};" {% endif %}>
				&#x2800;
			</span>
		</div>
		<span class="time{% if (event.date <= date("now +2 hour")) and not event.done %} blink{% endif %}" {% if event.done %} style="color: #52525288" {% else %} style="color: {{ event.category.color ~ '88'}};" {% endif %}>
			{{ event.date|format_datetime("none", "short", locale="es") }}
		</span>
	</div>
	<span>
		<em>{{ event.title }}</em>
	</span>
</div>