{% if client.contacts|length < 1 %}
    <div class="alert alert-info round">
        Este cliente no tiene contactos. <br>
    </div>
{% else %}

    <table class="table w-99 mb-0" style="transform: translateY(-1rem);">
        <tbody>
        {% for contact in client.contacts %}

            {% include "table/tr.html.twig" with {
                tr : {
                    values : {
                        name : {
                            value : contact.name,
                            attr : {
                                class : 'font-weight-normal cursor-pointer contact-show text-center text-nowrap border-top-0 border-bottom'
                            }
                        },
                        role : {
                            value : '<em>' ~ contact.role ~ '</em>',
                            attr : {
                                class : 'text-center cursor-pointer contact-show border-top-0 border-bottom'
                            }
                        },
                        phone : {
                            value : '<a class="btn btn-sm btn-outline-info border-0 w-100 round" href="tel:' ~ contact.getContactExtras(2)[0].value ~ '">' ~ contact.getContactExtras(2)[0].value ~ '</a>',
                            attr : {
                                class : 'text-center border-top-0 border-bottom',
                                style: 'width: 1px;'
                            }
                        },
                        email : {
                            value : '<a class="btn btn-sm btn-outline-info border-0 w-100 round" href="mailto:' ~ contact.getContactExtras(1)[0].value ~ '">' ~ contact.getContactExtras(1)[0].value ~ '</a>',
                            attr : {
                                class : 'text-center border-top-0 border-bottom',
                                style: 'width: 1px;'
                            }
                        },
                        trash : {
                            value : '<button class="btn btn-sm btn-outline-dark border-0 trash-contact w-100 contact-delete round" style="display: none;"><i class="fas fa-trash-alt"></i></button>',
                            attr : {
                                style : 'width: 50px;',
                                class : 'p-1 border-top-0 border-bottom'
                            }
                        }
                    },
                    attr : {
                        class : 'contact-row row-hover',
                        contactid : contact.id,
                        contactname : contact.name,
                    }
                }
            } %}
        {% endfor %}
        </tbody>
    </table>
{% endif %}
