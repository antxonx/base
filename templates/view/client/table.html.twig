<table class="table table-sm table-striped2 w-100 table-hover2">
    {% set sort %}
        <span class="float-right sort-icon hide-on-mobile"><i class="fas fa-sort"></i></span>
    {% endset %}
    {# Sort column solo en desktop #}
    {% set sortClass = 'cursor-pointer sort-column' %}
    {% if isMobile %}
        {% set sortClass = '' %}
    {% endif %}
    {# . #}
    {% include "table/thead.html.twig" with {
        tr : {
            values : {
                id : {
                    value : 'Id' ~ sort,
                    attr : {
                        class: sortClass,
                        column: 'id',
                        style: 'width: 120px !important;',
                    }
                },
                name : {
                    value : 'Nombre' ~ sort,
                    attr : {
                        class: sortClass,
                        column: 'name'
                    }
                },
                phone : {
                    value : 'Tel√©fono'
                },
                email : {
                    value : 'Correo'
                },
                delete : {
                    value : '<i class="fas fa-trash-alt mobile-2-desktop-1"></i>',
                    attr : {
                        class : 'text-center',
                        width : '50px'
                    }
                },
            },
            attr : {
                class: 'table-bordered'
            }
        }
    } %}
    <tbody id="clientsView"></tbody>
</table>
