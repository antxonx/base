{% set fullClass %}
    {% if entity.level == "WARNING" or entity.level == "API" %}
        badge-warning
    {% else %}
        badge-danger
    {% endif %}
{% endset %}
{% set badgeFull %}
    <span class="badge badge-role
        {% if entity.method == "GET" %}
        badge-success
        {% elseif entity.method == "POST" %}
        badge-primary
        {% elseif entity.method == "PUT" %}
        badge-warning
        {% elseif entity.method == "PATCH" %}
        badge-warning
        {% elseif entity.method == "DELETE" %}
        badge-danger
        {% else %}
        d-none
        {% endif %}
        badge-pill">{{ entity.method }}</span>
{% endset %}
<div class="full-cont font-weight-normal collapse" id="error-{{ entity.id }}">
    <div class="container card m-4 round mx-auto">
        <div class="card-body">

            <div class="row">
                <div class="col text-left">
                    <b>{{ entity.id }}</b>
                </div>
                <div class="col text-center">
                    <em>{{ entity.createdAt|format_datetime("long", "short", locale="es") }}</em>
                </div>
                <div class="col text-right">
                    {{ badgeFull }}
                </div>
            </div>

            <hr class="divide-2">

            <div class="alert alert-light" role="alert">
                <h5 class="text-center"><span class="badge {{ fullClass|trim }} badge-pill log-type">{{ entity.level }}</span></h5>

                <div class="row">
                    <div class="col-md-8">
                        <span>
                            <b>IP: </b> {{ entity.clientip }}
                        </span> <br>
                    </div>
                    <div class="col-md-4 border-left">
                        <span>
                            <b>Ruta: </b> {{ entity.route }}
                        </span> <br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <span>
                            <b>Archivo: </b> {{ entity.file }}
                        </span> <br>
                    </div>
                    <div class="col-md-4 border-left">
                        <span>
                            <b>Linea: </b> {{ entity.line }}
                        </span> <br>
                    </div>
                </div>
                <hr>
                {{ entity.message }}
            </div>
        </div>
    </div>
</div>
