<div class="event color-shadow" style="background-color: {{ event.category.backgroundColor ~ 'bb' }};color: {{ event.category.color }};" event-id="{{ event.id }}">
	<div style="width: 100%;">
		<div class="header">
			<span class="assigned">
				{% if event.client != null %}
					{{ event.client.name }}
				{% else %}
					&nbsp;
				{% endif %}
			</span>
			<span {% if event.priority != null %} class="priority" style="background-color: {{ event.priority.color }};" {% endif %}>
				&#x2800;
			</span>
		</div>
		<span class="time" style="color: {{ event.category.color ~ '88'}};">
            auto
		</span>
	</div>
	<span>
		<em>{{ event.title }}</em>
	</span>
</div>