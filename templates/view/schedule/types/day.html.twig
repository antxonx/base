<h5 class="text-center">{{ monthName }}</h5>
<div class="calendar">
    <div class="days">
    <div>
        <b>{{ day.name }}</b>
        <br>
        <small {% if ("now"|date("d-m-Y")) == day.date %}class="today"{% endif %}>{{ day.day }}</small>
    </div>
    </div>
    <div class="days-list">
        <div class="day">
            {% for event in day.events %}
                    <div class="event"
                        style="background-color: {{ event.color ~ '99' }}"
                        event-id="{{ event.id }}"
                    >
                        <span class="time">
                            <b>{{ event.date|format_datetime("none", "short", locale="es") }}</b>
                        </span>
                        <span>
                            <em>{{ event.title }}</em>
                        </span>
                    </div>
            {% endfor %}
        </div>
    </div>
</div>
