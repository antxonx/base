<div class="list-group list-group-flush">
    {% for log in errorLogs %}
    {% set badge %}
    <span class="badge badge-role 
            {% if log.method == "GET" %}
            badge-success
            {% elseif log.method == "POST" %}
            badge-primary
            {% elseif log.method == "PUT" %}
            badge-warning
            {% elseif log.method == "PATCH" %}
            badge-warning
            {% elseif log.method == "DELETE" %}
            badge-danger
            {% else %}
            d-none
            {% endif %}
            badge-pill">{{ log.method }}</span>
    {% endset %}
    {% set rowClass %}
    {% if log.system %}
    {% if log.level == "WARNING" or log.level == "API" %}
    bg-warning
    {% else %}
    bg-danger text-white
    {% endif %}
    {% endif %}
    {% endset %}
    {% set errorFull %}
    {% include "view/logger/full/error.html.twig" with {
                entity : log
            } %}
    {% endset %}
    <a class="list-group-item list-group-item-action cursor-pointer {{ rowClass }}" href="#error-{{ log.id }}"
        data-toggle="collapse" aria-expanded=false aria-controls='#error-{{ log.id }}'>
        <div class="row">
            <div class="col text-left">
                {{ log.route }}
            </div>
            <div class="col text-center">
                {{ log.createdAt|format_datetime("medium", "none", locale="es") }}
            </div>
            <div class="col text-right">
                {{ badge }}
            </div>
        </div>
    </a>
    {{ errorFull }}
    {% endfor %}
</div>