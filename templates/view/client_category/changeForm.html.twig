<div class="container">
    <h5 class="text-center">
        <em>{{ client.name }}</em>
        {% if client.category != null %}
            <div class="badge round color-shadow float-right"
                 style="background-color: {{ client.category.color }}; color: {{ client.category.color }};"
                 data-toggle="tooltip" data-placement="top" data-html="true"
                 title="<em>{{ client.category.name }}</em>"><i class="fas fa-palette"></i></div>
        {% endif %}
    </h5>
    <ul class="list-group mt-3" id="categoryList">
        {% for category in categories %}
            <li class="list-group-item hover cursor-pointer" category-id="{{ category.id }}">
                <div class="row">
                    <div class="col-md-2">
                        <div class="badge round color-shadow w-100"
                             style="background-color: {{ category.color }}; color: {{ category.color }};"><i class="fas fa-palette"></i></div>
                    </div>
                    <div class="col-md-10">{{ category.name }}</div>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>
