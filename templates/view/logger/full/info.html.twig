{% set badgeFull %}
    <span class="badge badge-role
        {% if entity.method == "GET" %}
        badge-success
        {% elseif entity.method == "POST" %}
        badge-primary
        {% elseif entity.method == "PUT" %}
        badge-warning
        {% elseif entity.method == "PATCH" %}
        badge-warning
        {% elseif entity.method == "DELETE" %}
        badge-danger
        {% else %}
        d-none
        {% endif %}
        badge-pill">{{ entity.method }}</span>
{% endset %}
<div class="container font-weight-normal collapse" id="info-{{ entity.id }}">
    <div class="card m-4 round">

        <div class="card-body">
            <div class="row">
                <div class="col text-left">
                    <b>{{ entity.id }}</b>
                </div>
                <div class="col text-center">
                    <em>{{ entity.createdAt|format_datetime("long", "short", locale="es") }}</em>
                </div>
                <div class="col text-right">
                    {{ badgeFull }}
                </div>
            </div>
            <hr class="divide-2">
            <div class="alert alert-light">
                <h5 class="text-center"><span class="badge badge-info badge-pill log-type">{{ entity.level }}</span>
                </h5>

                <div class="row">
                    <div class="col-md-6">
                        <span>
                            <b>IP: </b> {{ entity.clientip }}
                        </span>
                    </div>
                    <div class="col-md-6 border-left">
                        <span>
                        <b>Ruta: </b> {{ entity.route }}
                    </span>
                    </div>
                </div>
                <hr>
                {{ entity.message }}
            </div>
        </div>
    </div>
</div>
