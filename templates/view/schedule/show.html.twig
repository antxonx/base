<div class="card-body">
    <div class="row">
        <div class="col-md-6">
            <p>
                <b>Tarea</b> <br>
                {{ task.title }}
            </p>
            <p>
                <b>Fecha</b> <br>
                {{ task.date|format_datetime("full", "none", locale="es") }}
            </p>
            <p>
                <b>Hora</b> <br>
                {{ task.date|format_datetime("none", "short", locale="es") }}
            </p>
        </div>
        <div class="col-md-6">
            <p>
                <b>Responsable</b> <br>
            {% if task.assigned != null %}
                {{ task.assigned.name }}
            {% else %}
                <em>Sin asignar</em>
            {% endif %}
            </p>
            <p>
                <b>Categor√≠a</b> <br>
                <span class="color-pill" style="background-color: {{ task.category.backgroundColor }}">&nbsp;</span> {{ task.category.name }}
            </p>
            <p>
                <b>Prioridad</b> <br>
                <span class="color-pill" style="background-color: {{ task.priority.color }}">&nbsp;</span> {{ task.priority.name }}
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>
                <b>Detalle</b> <br>
                {{ task.detail }}
            </p>
        </div>
    </div>
</div>
{% include "view/footer/datetimes.html.twig" with {
    created : {
        name : task.createdBy.name,
        time : task.createdAt
    },
    updated : {
        name : task.updatedBy.name,
        time : task.updatedAt
    }
} %}
