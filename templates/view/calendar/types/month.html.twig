<h5 class="text-center">{{ monthName }}</h5>
<div class="calendar">
    <div class="days">
        {% for day in week %}
            <div><b>{{ day }}</b></div>
        {% endfor %}
    </div>
    <div class="schedule">
        {% set dayy = 0 %}
        <div class="schedule-row">
            {% for day in month %}
                {% if (loop.index != 1 ) and ((loop.index - 1) % 7 == 0) %}
                    {% set dayy = loop.index %}
                    </div>
                    {% for i in 0.. 6 %}
                        <div class="schedule-info" day="{{ dayy - 7 + i - first }}">{{ dayy - 7 + i - first}}</div>
                    {% endfor %}
                    <div class="schedule-row">
                {% endif %}
                <div class="schedule-day {% if day == null %}disabled{% endif %}" day="{{ day }}">
                <div class="schedule-day-number">
                    <span class="{% if day != null %}active{% endif %}">{{ day }}</span>
                </div>
                <div class="schedule-content">

                </div>
            </div>
            {% endfor %}
        </div>
        {% for i in 0.. 6 %}
        <div class="schedule-info" day="{{ dayy + i - first }}">{{ dayy + i - first }}</div>
        {% endfor %}
    </div>
</div>
