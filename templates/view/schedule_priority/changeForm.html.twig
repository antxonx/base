<div class="container">
	<ul class="list-group mt-3" id="priorityList" style="max-height: 400px; overflow-y: auto;">
		{% for priority in categories %}
			<li class="list-group-item hover cursor-pointer" priority-id="{{ priority.id }}">
				<div class="row">
					<div class="col-md-2">
						<div class="badge round color-shadow w-100" style="background-color: {{ priority.color }}; color: {{ priority.color }};">
							<i class="fas fa-palette"></i>
						</div>
					</div>
					<div class="col-md-10">{{ priority.name }}</div>
				</div>
			</li>
		{% endfor %}
	</ul>
</div>
