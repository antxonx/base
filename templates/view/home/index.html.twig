{% extends 'base.html.twig' %}

{% block title %}Inicio{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="container card card-body round main-2">
            Bienvenido, {{ app.user.name }}
        </div>
        {% include "view/home/dashboard.html.twig" %}
    {% else %}
        <script>
            window.location.href = "{{ path('app_login') }}";
        </script>
    {% endif %}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('dashboard') }}
{% endblock %}
