<simple-card>
	<simple-card-title>
		<h5 class="d-inline">Ãšltimos clientes agregados</h5>
		<a target="_blank" class="btn btn-light float-right round" href="{{ path('client_index') }}">
			<i class="fas fa-external-link-alt"></i>
		</a>
	</simple-card-title>
	<simple-card-content>
		<div class="list-group list-group-flush">
			{% for client in clients %}
				{% set dateClass %}
				{% if date(client.createdAt) >= date("-5days", "America/Mexico_city") %}
					badge-success
				{% else %}
					badge-secondary
				{% endif %}
				{% endset %}
				<a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center client-list" id="{{ client.id }}">
					{{ client.name }}
					<span class="badge {{ dateClass }}">{{ client.createdAt|format_datetime("medium", "none", locale="es") }}</span>
				</a>
			{% endfor %}
		</div>
	</simple-card-content>
</simple-card>
