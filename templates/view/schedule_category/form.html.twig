<form id="scheduleCategoryForm">
	{% include 'form/input.html.twig' with {
        type : 'text',
        id: 'name',
        label: 'Nombre',
        placeholder: 'Nombre',
        required : true,
        error : 'Ingrese un nombre para la categoría'
    } %}
	<div class="form-group">
		<textarea class="form-control" rows="5" id="description" name="description" placeholder="Descripción"></textarea>
	</div>
	<div class="form-group d-flex justify-content-between">
		<b class="text-muted font-italic">Color de fondo:&nbsp;</b><input type="color" id="bColor" name="bColor" value="#eee7e7"><span></span>
		<span></span>
		<span></span>
		<span></span>
	</div>
	<div class="form-group d-flex justify-content-between">
		<b class="text-muted font-italic">Color de texto:&nbsp;&nbsp;</b><input type="color" id="tColor" name="tColor" value="#000000"><span></span>
		<span></span>
		<span></span>
		<span></span>
	</div>
	<b class="text-muted font-italic">Puesto:</b>
	<br>
	<div class="row">
		{% set roles = [
            {nombre: 'admin', real: 'ROLE_ADMIN'},
            {nombre: 'común', real: 'ROLE_COMMON'},
            {nombre: 'supervisor', real: 'ROLE_SUPERVISOR'},
        ] %}
		{% for role in roles %}
			<div class="col-md-5 ml-3 checkbox-lg">
				<input type="checkbox" class="custom-control-input check-roles" value="{{ role.real }}" id="roleCheckBox{{ loop.index }}">
				<label for="roleCheckBox{{ loop.index }}" class="custom-control-label">{{ role.nombre }}</label>
			</div>
		{% endfor %}
	</div>
	<div id="submit-btn" class="w-100 text-left mt-3">
		<button type="submit" class="btn btn-large btn-antxony round w-100" id="submit-real-btn">Agregar</button>
	</div>
</form>
