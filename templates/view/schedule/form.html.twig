<form id="scheduleForm" style="position: relative;">
    {% include 'form/input.html.twig' with {
        type : 'text',
        id: 'title',
        label: 'Tarea',
        placeholder: 'Tarea',
        required : true,
        error : 'Ingrese un título para la tarea'
    } %}
    <div class="form-group" style="position: relative;">
        <input
            type="text"
            t-type="text"
            name="taskDate"
            class="form-control required datepicker cursor-pointer"
            id="taskDate"
            aria-describedby="taskDateHelp"
            placeholder="Fecha"
            error-msg="Seleccione una fecha y hora"
            value=""
            readonly
        >
    </div>
    {# <div class="form-group">
        <select id="category-select" class="form-control">
            <option class="text-muted" value="0" hidden>Categoría</option>
            {% for category in categories %}
                <option class="text-muted" value="{{ category.id }}">{{ category.name }}</option>
            {% endfor %}
        </select>
    </div> #}
    {# <div class="form-group">
        <select id="priority-select" class="form-control">
            <option class="text-muted" value="0" hidden>Prioridad</option>
            {% for priority in priorities %}
                <option class="text-muted" value="{{ priority.id }}">{{ priority.name }}</option>
            {% endfor %}
        </select>
    </div> #}
    {# <div class="form-group" style="position: relative;">
        <input
            class="form-control datepicker cursor-pointer"
            id="taskCategory"
            aria-describedby="taskCategoryHelp"
            placeholder="Categoría"
            value=""
            readonly
        >
        <ul class="list-group" id="categoryList" style="
            max-height: 200px;
            overflow-y: auto;
            position: absolute;
            width: 100%;
        ">
            {% for category in categories %}
                <li class="list-group-item hover cursor-pointer" category-id="{{ category.id }}">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="badge round color-shadow w-100"
                                 style="background-color: {{ category.backgroundColor }}; color: {{ category.backgroundColor }};"><i class="fas fa-palette"></i></div>
