{% if ((index) >= 0) and ((index) < month|length) %}
    {% if month[index].events|length > 0 %}
    {% for event in month[index].events %}
        <div
            class="schedule-sumary"
            style="background-color: {{ event.category.backgroundColor ~ '99' }}; color: {{ event.category.color }}"
            event-id="{{ event.id }}"
        >
            <div class="date">
                {{ event.date|format_datetime("long", "short", locale="es") }}
            </div>
            <div class="info">
                <em>{{ event.title }}</em>
            </div>
        </div>
    {% endfor %}
    {% else %}
        <div class="schedule-sumary nothing">
            No hay eventos registrados para este d√≠a.
        </div>
    {% endif %}
{% endif %}
