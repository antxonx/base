<form id="scheduleForm" style="position: relative;">
	{% include 'form/input.html.twig' with {
        type : 'text',
        id: 'title',
        label: 'Tarea',
        placeholder: 'Tarea',
        required : true,
        error : 'Ingrese un título para la tarea'
    } %}
	{% include 'view/client/search.html.twig' %}
	<div class="form-group" style="position: relative;">
		<input type="text" t-type="text" name="taskDate" class="form-control required datepicker cursor-pointer" id="taskDate" aria-describedby="taskDateHelp" placeholder="Fecha" error-msg="Seleccione una fecha y hora" value="" readonly>
	</div>
	<div class="form-group">
		<textarea type="text" t-type="text" class="form-control required" id="taskDetail" rows="5" aria-describedby="taskDetailHelp" placeholder="Detalle" error-msg="Agregue el detalle de la tarea"></textarea>
	</div>
	<div class="form-group" style="position: relative;">
		<div class="dropdow-arrow">
			<input id="taskCategory" value="" placeholder="Categoría" class="form-control readonly-click cursor-pointer" options="{{ categories|json_encode }}" readonly>
		</div>
	</div>
	<div class="form-group" style="position: relative;">
		<div class="dropdow-arrow">
			<input id="taskPriority" value="" placeholder="Prioridad" class="form-control readonly-click cursor-pointer" options="{{ priorities|json_encode }}" readonly>
		</div>
	</div>
	<div class="form-group" style="position: relative;" id="user-select-container"></div>
	<div class="custom-control custom-switch">
		<input type="checkbox" class="custom-control-input" id="recurrentSwitch">
		<label class="custom-control-label" for="recurrentSwitch">Recurrente</label>
	</div>
	<div id="submit-btn" class="w-100 text-left mt-2">
		<button type="submit" class="btn btn-large btn-antxony round w-100" id="submit-real-btn">Agregar</button>
	</div>
</form>
