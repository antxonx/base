<table class="table table-sm table-striped2 w-100 table-hover2">
    {% set sort %}
        <span class="float-right sort-icon hide-on-mobile"><i class="fas fa-sort"></i></span>
    {% endset %}
    {# Developer-> #}
    {% set extra = {
        value : '',
        attr : {
            class: 'd-none'
        }
    } %}
    {% set logger = {
        value : '',
        attr : {
            class: 'd-none'
        }
    } %}
    {% if is_granted("ROLE_ALLOWED_TO_SWITCH") %}
        {% set extra = {
            value : '<i class="fas fa-user-tie"></i>',
            attr : {
                class : 'text-center',
                style : 'width: 50px !important;'
            }
        } %}
    {% endif %}
    {% if is_granted("ROLE_GOD") %}
        {% set logger = {
            value : '<i class="fas fa-book"></i>',
            attr : {
                class: 'text-center',
                style: 'width: 50px !important;'
            }
        } %}
    {% endif %}
    {# <-Developer #}
    {# Sort column solo en desktop #}
    {% set sortClass = 'cursor-pointer sort-column' %}
    {% if isMobile %}
        {% set sortClass = '' %}
    {% endif %}
    {# . #}
    {% include "table/thead.html.twig" with {
        tr : {
            values : {
                id : {
                    value : 'Id' ~ sort,
                    attr : {
                        class: sortClass,
                        column: 'id',
                        style: 'width: 120px !important;'
                    }
                },
                username : {
                    value : 'Usuario' ~ sort,
                    attr : {
                        class: sortClass,
                        column: 'username',
                    }
                },
                name : {
                    value : 'Nombre' ~ sort,
                    attr : {
                        class: sortClass,
                        column: 'name',
                    }
                },
                roles : {
                    value : 'Puesto',
                    attr : {
                        width: '1px'
                    }
                },
                email : {
                    value : 'Email',
                },
                key : {
                    value : '<i class="fas fa-key"></i>',
                    attr : {
                        class : 'text-center',
                        width : '50px'
                    }
                },
                delete : {
                    value : '<i class="fas fa-trash-alt"></i>',
                    attr : {
                        class : 'text-center',
                        width : '50px'
                    }
                },
                extra : extra,
                logger: logger
            },
            attr : {
                class: 'table-bordered'
            }
        }
    } %}
    <tbody id="usersView"></tbody>
</table>
